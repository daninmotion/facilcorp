<div class="row">

	<div class="col-md-7">
		<div class="left">
			<h1>fácilcorp</h1>
			<h3>La forma más fácil y rapida para los emprendedores Latino Americanos incorporar su empresa.</h3>
		</div>
	</div>

	<div class="col-md-5">
		
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  

			 <form>
			 	<div class="col-sm-7">
			 		<div class="right">
				 		<h2>Sign up</h2>
				 		<%= f.error_notification %>
					  <div class="form-group">
					    <%= f.input :email, required: false, autofocus: true %>
					  </div>
					  
					  <div class="form-group">
					    <%= f.input :password, required: false, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
					  </div>

					  <div class="form-group">
					    <%= f.input :password_confirmation, required: false %>
					  </div>

					  <div class="form-group">
					    <%= f.submit "Sign up", class: "btn btn-default" %><br />
							<%= render "devise/shared/links" %>
					  </div>
					</div>
				 </div>
			 </form>
		<% end %>
	</div>

</div>

